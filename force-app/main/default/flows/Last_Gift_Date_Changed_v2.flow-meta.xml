<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>Populates 2nd to last gift data/amount on Account &amp; Contact</description>
    <environments>Default</environments>
    <formulas>
        <name>LastGiftAmount</name>
        <dataType>Currency</dataType>
        <expression>{!$Record__Prior.npo02__LastOppAmount__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>LastGiftAmountAcct</name>
        <dataType>Currency</dataType>
        <expression>{!$Record__Prior.npo02__LastOppAmount__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>LastGiftDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record__Prior.npo02__LastCloseDate__c}</expression>
    </formulas>
    <interviewLabel>Last Gift Date Changed v2 {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Last Gift Date Changed v2</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Account</name>
        <label>Update Account</label>
        <locationX>308</locationX>
        <locationY>276</locationY>
        <inputAssignments>
            <field>X2nd_to_Last_Gift_Amount__c</field>
            <value>
                <elementReference>LastGiftAmount</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>X2nd_to_Last_Gift_Date__c</field>
            <value>
                <elementReference>LastGiftDate</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>npo02__LastCloseDate__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <scheduledPaths>
            <name>Wait_5_Minutes</name>
            <connector>
                <targetReference>Update_Account</targetReference>
            </connector>
            <label>Wait 5 Minutes</label>
            <offsetNumber>5</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <timeSource>RecordTriggerEvent</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>InvalidDraft</status>
</Flow>
